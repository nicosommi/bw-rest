<?xml version = "1.0" encoding = "UTF-8"?>
<routes xmlns = "http://www.hp.com/labs/rest/RESTTypes" xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation = "http://www.hp.com/labs/rest/RESTTypes ../REST/Resources/Schemas/RESTTypes.xsd">
	<route>
		<path>/</path>
		<verb>GET</verb>
		<type>view</type>
		<file>/webapp/views/index.html.jade</file>
		<beforeHandler>/webapp/services/getIndex.process</beforeHandler>
	</route>
	<route>
		<path>/</path>
		<verb>GET</verb>
		<type>static</type>
		<folder>/webapp/public</folder>
	</route>
	<route>
		<path>/login</path>
		<verb>GET</verb>
		<handler>/webapp/services/postLogin.process</handler>
		<parameters>
			<parameter>
				<name>username</name>
				<type>query</type>
			</parameter>
			<parameter>
				<name>password</name>
				<type>query</type>
			</parameter>
		</parameters>
	</route>
	<route>
		<path>/users</path>
		<verb>POST</verb>
		<handler>/webapp/services/AddUser.process</handler>
	</route>
	<route>
		<path>/users/[\w-]+</path>
		<verb>PUT</verb>
		<handler>/webapp/services/UpdateUser.process</handler>
	</route>
	<route>
		<path>/users</path>
		<verb>GET</verb>
		<handler>/webapp/services/GetUsers.process</handler>
	</route>
	<route>
		<path>/users/[\w-]+</path>
		<verb>DELETE</verb>
		<handler>/webapp/services/RemoveUser.process</handler>
		<parameters>
			<parameter>
				<name>id</name>
				<position>2</position>
				<type>url</type>
			</parameter>
		</parameters>
	</route>
</routes>